//area of circle pi r^2
//area of cylinder pi r^2 h
//here radius of circle & cylinder should be equal
//value of radius and height should be an integer
#include <stdio.h>
int main()
{
    int r;
    printf("enter the value of radius:");
    scanf("%d", &r);
    printf("area of circle is %f\n",3.14*r*r);
    int h;
    printf("enter the value of height:");
    scanf("%d", &h);
    printf("area of cylinder is %f",3.14*r*r*h);
    return 0;
}
